doctype html
html(lang="en")
    head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")

    base(href="/")

    title Floema
    meta(name="description", content="Floema Beautiful Jewlery")
    link(rel="apple-touch-icon", sizes="180x180", href="/apple-touch-icon.png")
    link(rel="icon", type="image/png", sizes="32x32", href="/favicon-32x32.png")
    link(rel="icon", type="image/png", sizes="16x16", href="/favicon-16x16.png")
    link(rel="manifest", href="/site.webmanifest")
    link(rel="mask-icon", href="/safari-pinned-tab.svg", color="#fbf7ec")

    meta(name="msapplication-TileColor", content="#fbf7ec")
    meta(name="theme-color", content="#fbf7ec")
    me
    meta(property="og:description", content=meta.data.description)
    meta(property="og:image", content=meta.data.image ? meta.data.image.url : '')
