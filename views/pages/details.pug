extends ../base

block variables
    - var template = 'details';

block content
    .details
        .details__wrapper
            figure.details__media
                img.details__media__image(alt=product.data.image.alt, src=product.data.image.url)

            .details__information
                p.details__information__collection= product.data.collection.data.title
                h1.details__information__title= product.data.title

                .details__information__content
                    .details__information__highlights
                        each highlight in product.data.highlights
                            p.details__information__highlight
                                if highlight.highlights_icon.toLowerCase() == 'arrow'
                                    svg.details__information__highlight__icon(xmlns="http://www.w3.org/2000/svg", viewBox="0 0 40 40")
                                        path(fill="none", stroke="currentColor", d="M20,0.5c10.77,0,19.5,8.73,19.5,19.5S30.77,39.5,20,39.5S0.5,30.77,0.5,20S9.23,0.5,20,0.5z")
                                        path(stroke="currentColor", d="M14.84,25.46l11.31-11.31")
                                        path(fill="currentColor", d="M30.75,9.55l-0.66,2.36l-0.05,2.59l-1.93-2.31l-2.31-1.93l2.59-0.05L30.75,9.55z")
                                        path(fill="currentColor", d="M10.25,30.05l0.66-2.36l0.05-2.59l1.93,2.31l2.31,1.93l-2.59,0.05L10.25,30.05z")
                                else
                                    svg.details__information__highlight__icon(xmlns="http://www.w3.org/2000/svg", viewBox="0 0 40 40")
                                        path(fill="currentColor", d="M24.26,9.87l-2.76,8.6l8.72-2.63l-8.16,4.13l8.15,4.26l-8.71-2.82l2.82,8.91l-4.26-8.34l-4.14,8.15l2.63-8.72 l-8.6,2.75l8.15-4.2l-8.34-4.33l8.78,2.82l-2.82-8.78l4.33,8.34L24.26,9.87z")
                                        path(fill="none", stroke="currentColor", d="M20,0.5c10.77,0,19.5,8.73,19.5,19.5S30.77,39.5,20,39.5S0.5,30.77,0.5,20S9.23,0.5,20,0.5z")

                                span.details__information__hightlight__text!= highlight.highlights_text.replace(/\n/, '<br />')

                    .details__information__list
                        each item in product.data.informations
                            p.details__information__item
                                strong.details__information__item__label= item.informations_label
                                span.details__information__item__description= item.informations_description

                    a.details__information__link(href=product.data.link_url.url, target="_blank")= product.data.link_text

            button.details__button Close
                svg.details__button__icon(xmlns="http://www.w3.org/2000/svg", viewBox="0 0 124 60")
                    path(stroke="currentColor", fill="none", d="M62,0.5c33.97,0,61.5,13.21,61.5,29.5S95.97,59.5,62,59.5S0.5,46.29,0.5,30S28.03,0.5,62,0.5z")
